<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "http://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">
<benchmark tool="cpachecker" timelimit="60 s" hardtimelimit="90 s" memlimit="3 GB" cpuCores="1">

  <option name="-preprocess"/>
  <option name="-noout"/>
  <option name="-heap">2000M</option>

  <rundefinition>
    <option name="-smg2-symbolic-memsafety"/>
  </rundefinition>

  <requiredfiles>../programs/cpalien/cpalien-headers.h</requiredfiles>

  <tasks>
    <includesfile>../programs/smg2_tests/smg2-test.set</includesfile>
    <propertyfile>../config/properties/valid-memsafety.prp</propertyfile>
  </tasks>

  <tasks name="cpalien">
    <includesfile>../programs/cpalien/cpalien.set</includesfile>
    <option name="-smg"/>
    <option name="-preprocess" />
    <propertyfile>../config/properties/valid-memsafety.prp</propertyfile>
  </tasks>

  <tasks name="HeapMemSafety">
    <includesfile>../programs/benchmarks/MemSafety-Heap.set</includesfile>
    <option name="-smg"/>
    <propertyfile>../programs/benchmarks/properties/valid-memsafety.prp</propertyfile>
    <exclude>../programs/benchmarks/ldv-memsafety/ArraysOfVariableLength.yml</exclude> <!-- flapping timeout -->
  </tasks>

  <tasks name="ArraysMemSafety">
    <includesfile>../programs/benchmarks/MemSafety-Arrays.set</includesfile>
    <option name="-smg"/>
    <propertyfile>../programs/benchmarks/properties/valid-memsafety.prp</propertyfile>
    <exclude>../programs/benchmarks/termination-memory-alloca/Urban-2013WST-Fig1-alloca.yml</exclude> <!-- flapping timeout -->
  </tasks>

  <tasks name="ExtAllocMemSafety">
    <includesfile>../programs/smg_External_Allocation_Test/ExtAlloc.set</includesfile>
    <option name="-smg"/>
    <propertyfile>../config/properties/valid-memsafety.prp</propertyfile>
  </tasks>

  <columns>
    <column title="reached">Size of reached set</column>
    <column title="time_refinements">Time for refinements</column>
  </columns>
</benchmark>
